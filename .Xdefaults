
!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------
 
Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight
Xft.autohint:               false
Xft.lcdfilter:              lcddefault

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------
 
URxvt*depth:                32
URxvt.geometry:             90x30
URxvt*transparent:          true
URxvt*shading:              50
URxvt.loginShell:           true
URxvt.saveLines:            50
URxvt.internalBorder:       3
URxvt.lineSpace:            0
 
! Fonts
URxvt.allow_bold:           true
URxvt.font:           xft:Inconsolata\ for\ Powerline:size=11:antialias=true,xft:Inconsolata\ for\ Powerline:size=11:antialias=true
URxvt.imFont:         xft:Inconsolata\ for\ Powerline:MediumForPowerline:size=11:antialias=true,xft:Inconsolata\ for\ Powerline:size=11:antialias=true
URxvt.boldFont:       xft:Inconsolata\ for\ Powerline:MediumForPowerline:size=11:antialias=true,xft:Inconsolata\ For\ Powerline:size=11:antialias=true
URxvt.italicFont:     xft:Inconsolata\ for\ Powerline:MediumForPowerline:size=11:antialias=true,xft:Inconsolata\ For\ Powerline:size=11:antialias=true
URxvt.boldItalicFont: xft:Inconsolata\ for\ Powerline:MediumForPowerline:size=11:antialias=true,xft:Inconsolata\ For\ Powerline:size=11:antialias=true

URxvt.intensityStyles: false
URxvt.iconFile:       /usr/share/icons/Faenza/apps/scalable/terminal.svg
URxvt.boldMode:       false
URxvt.skipBuiltinGlyphs: true
URxvt.loginShell: true
URxvt*title: urxvt
URxvt*termName: rxvt-unicode-256color
URxvt*urgentOnBell: true

URxvt.depth: 24
URxvt.internalBorder: 1

! ScrollBar
URxvt.scrollBar:            false
URxvt.scrollBar_right:      false
URxvt.scrollstyle:          plain
URxvt.jumpScroll:           false

URxvt.scrollWithBuffer:     true
URxvt.scrollTtyKeypress:    true
URxvt.scrollTtyOutput:      false

URxvt.buffered:             true
URxvt.pointerBlank:         true
URxvt.underlineURLs:        true
URxvt.saveLines:            2048

! URLs

URxvt.perl-ext:              default,url-select,matcher,clipboard,font-size
URxvt.keysym.M-u:            perl:url-select:select_next
URxvt.url-select.launcher:   /usr/bin/chromium
URxvt.url-select.underline:  true
URxvt.keysym.C-Up:           perl:font-size:increase 
URxvt.keysym.C-Down:         perl:font-size:decrease 
URxvt.keysym.C-S-Up:         perl:font-size:incglobal 
URxvt.keysym.C-S-Down:       perl:font-size:decglobal 
URxvt.iso14755:              false
URxvt.iso14755_52:           false
URxvt.keysym.M-c:            perl:clipboard:copy
URxvt.keysym.M-v:            perl:clipboard:paste

Xcursor.size:  15

! Cursor
URxvt.cursorBlink:          true
! URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false
 
! Pointer
URxvt.pointerBlank:         true

*background:            #a9a9a9
*foreground:            #ffffff
*cursorColor:           #ffffff

!! red dark/light
*color1:                #dc322f
*color9:                #cb4b16

!! green dark/light
*color2:                #859900
*color10:               #586e75

!! yellow dark/light
*color3:                #ffb90f
*color11:               ##ffff00

!! blue dark/light
*color4:                #268bd2
*color12:               #839496

!! magenta dark/light
*color5:                #d33682
*color13:               #6c71c4

!! cyan dark/light
*color6:                #2aa198
*color14:               #93a1a1

