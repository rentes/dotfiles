" Highlight all searches with color
:set hlsearch
" Always show the line numbers
:set nu
" Match brackets
:set showmatch
" Show whitespace
:set list
" Specify the list char to show the whitespace
set showbreak=↪\ 
set listchars=tab:→\ ,eol:↲,nbsp:␣,trail:•,extends:⟩,precedes:⟨
" Set color column at column 80
:set colorcolumn=80
